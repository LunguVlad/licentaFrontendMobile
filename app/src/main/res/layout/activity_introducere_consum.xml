<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal">

        <Space android:layout_width="75dp"
            android:layout_height="0dp">

        </Space>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/editTextApaReceBaieMare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Apa rece baie mare"
            android:textColorHint="#0000FF"
            android:textColor="#0000FF"
            android:inputType="textPersonName" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_camera" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal">

        <Space android:layout_width="75dp"
            android:layout_height="0dp">

        </Space>


        <EditText
            android:layout_gravity="center"
            android:id="@+id/editTextApaReceBaieMica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Apa rece baie mica"
            android:textColorHint="#0000FF"
            android:textColor="#0000FF"
            android:inputType="textPersonName" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButton4"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal">

        <Space android:layout_width="75dp"
            android:layout_height="0dp">

        </Space>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/editTextApaReceBucatarie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Apa rece bucatarie"
            android:textColorHint="#0000FF"
            android:textColor="#0000FF"
            android:inputType="textPersonName" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButton5"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal">

        <Space android:layout_width="75dp"
            android:layout_height="0dp">

        </Space>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/editTextApaCaldaBaieMare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Apa calda baie mare"
            android:textColorHint="#FF0000"
            android:textColor="#FF0000"
            android:inputType="textPersonName" />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButton6"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal">

        <Space android:layout_width="75dp"
            android:layout_height="0dp">

        </Space>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/editTextApaCaldaBaieMica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Apa calda baie mica"
            android:textColorHint="#FF0000"
            android:textColor="#FF0000"
            android:inputType="textPersonName"
            />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_camera" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:orientation="horizontal">

        <Space android:layout_width="75dp"
            android:layout_height="0dp">

        </Space>

        <EditText
            android:layout_gravity="center"
            android:id="@+id/editTextApaCaldaBucatarie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Apa calda bucatarie"
            android:textColorHint="#FF0000"
            android:textColor="#FF0000"
            android:inputType="textPersonName"
            />

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openCamera"
            app:srcCompat="@android:drawable/ic_menu_camera" />

    </LinearLayout>







    <Button
        android:id="@+id/insertConsum"
        android:onClick="insertConsumOnClick"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:text="Introduce"
        android:layout_gravity="center"
      />


</LinearLayout>
</ScrollView>